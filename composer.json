{
  "name": "putyourlightson/craft-blitz-netlify",
  "description": "Netlify deployer for the Blitz plugin for Craft CMS.",
  "version": "3.0.0-beta.1",
  "type": "blitz-deployer",
  "license": "proprietary",
  "keywords": [
    "craftcms",
    "blitz",
    "cache",
    "netlify",
    "deployer"
  ],
  "require": {
    "ext-zip": "*",
    "php": "^8.2",
    "craftcms/cms": "^5.0.0-beta.1",
    "putyourlightson/craft-blitz": "^5.0.0-beta.1",
    "league/oauth2-client": "^2.0",
    "putyourlightson/oauth2-netlify": "^1.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "putyourlightson\\blitznetlify\\": "src/"
    }
  },
  "scripts": {
    "phpstan": "phpstan --ansi --memory-limit=1G",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --fix --ansi"
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "pestphp/pest-plugin": true,
      "yiisoft/yii2-composer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "support": {
    "docs": "https://github.com/putyourlightson/craft-blitz-netlify",
    "source": "https://github.com/putyourlightson/craft-blitz-netlify",
    "issues": "https://github.com/putyourlightson/craft-blitz-netlify/issues"
  },
  "extra": {
    "name": "Blitz Netlify Deployer",
    "developer": "PutYourLightsOn",
    "developerUrl": "https://putyourlightson.com/",
    "documentationUrl": "https://putyourlightson.com/plugins/blitz",
    "changelogUrl": "https://raw.githubusercontent.com/putyourlightson/craft-blitz-netlify/v2/CHANGELOG.md"
  }
}
